<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgetPassword">\

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/rubik_bold"
            android:text="Lupa Kata Sandi"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="35dp"></TextView>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/lupa_pass"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan alamat E-mail yang terdaftar :"
            android:textSize="20dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            ></TextView>

        <EditText
            android:id="@+id/emailfpass"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Alamat E-mail"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_email"
            android:paddingLeft="10dp"
            android:drawablePadding="15dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:background="@drawable/edit"
            ></EditText>

        <Button
            android:id="@+id/btnResetPass"
            android:onClick="tmblresetpassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#528BFE"
            android:fontFamily="@font/roboto_medium"
            android:hint="Reset Kata Sandi"
            android:textSize="18dp"
            android:textColorHint="@color/white"
            app:cornerRadius="90dp"
            android:layout_marginTop="80dp"
            ></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>